[user]
  name = {{ output "op" "item" "get" "GitUser" "--vault" "Development" "--field" "name" | trim }}
  email = {{ output "op" "item" "get" "GitUser" "--vault" "Development" "--field" "email" | trim }}

[core]
	excludesfile = {{ .chezmoi.homeDir }}/.gitignore_global

[ghq]
	root = ~/src

# difftasticをデフォルトで使用する
[diff]
    external = difft

{{ if eq .chezmoi.os "darwin" }}
[credential]
	helper = osxkeychain
{{ end }}
