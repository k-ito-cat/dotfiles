[include]
	path = ~/.local/share/chezmoi/.gitconfig.local

[color]
	ui = auto

[alias]
	st = status
	co = checkout
	br = branch
	ci = commit
	s = status
	sc = switch -c
	bdel = branch -D
	slist = stash list
	save = stash save
	cob = checkout -b
	cae = commit --allow-empty -m

[core]
	excludesfile = {{ .chezmoi.homeDir }}/.gitignore_global

[ghq]
	root = ~/src

[credential]
	helper = osxkeychain

