# ===== Aliases =====

alias sz="source ~/.zshrc"

# 1Password CLI サインインコマンドのエイリアス　
alias ops="eval \"\$(op signin)\""

alias lg="lazygit"
alias yy="yazi"

# codex
# 推論のレベルの指定。設定ファイルを一時的に上書きする。デフォルトはmedium。
alias codexh="codex -c model_reasoning_effort='high'"
alias codexm="codex -c model_reasoning_effort='medium'"
alias codexl="codex -c model_reasoning_effort='low'"

# chezmoi
alias czap="chezmoi apply"
alias czad="chezmoi add"
alias cze="chezmoi edit"
alias czu="chezmoi update"

# ls（eza）
alias ls="eza"
alias ll="eza -l"
alias la="eza -la"
alias lst="eza --tree"
alias lst1="eza --tree -L 1"
alias lst2="eza --tree -L 2"
alias lst3="eza --tree -L 3"

# cat（bat）
alias cat="bat"

